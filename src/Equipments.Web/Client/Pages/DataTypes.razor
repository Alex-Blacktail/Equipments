@page "/data-types"
@inject HttpClient httpClient

@using Equipments.Domain;

<PageTitle>Типы данных</PageTitle>
<div class="row" style="margin-bottom: 1rem">
    <div class="col-12 col-md-6">
        <RadzenText Text="Типы данных" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
    </div>
    <div class="col-12 col-md-6 justify-content-start justify-content-md-end" style="display: flex; align-items: center; flex-wrap: wrap; gap: 0.5rem">
    <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <RadzenDataGrid @ref="grid" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true"
                        Data="@dataTypes" Count=count LoadData=@GridLoadData TItem="DataType" RowSelect="@EditRow">

            <Columns>
                <RadzenDataGridColumn TItem="DataType" Property="Name" Title="Наименование">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DataType" Property="CodeName" Title="Кодовое название">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DataType" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="dataType">
                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, dataType)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>
    </div>
</div>
