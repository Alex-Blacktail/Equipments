@inherits LayoutComponentBase

<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout>

    <RadzenHeader>
        <div class="row justify-content-start align-items-center">
            <div class="col-6 d-flex align-items-center">
                <RadzenSidebarToggle Click="@SidebarToggleClick"></RadzenSidebarToggle>
                <RadzenLabel Text="Мониторинг состояния оргтехники"></RadzenLabel>
            </div>
            <div class="col-6 d-flex align-items-center justify-content-end">
                <LoginDisplay/>
            </div>
        </div>
    </RadzenHeader>

    <RadzenBody Expanded="@sidebarExpanded">
        <RadzenContentContainer Name="main">
        @Body
        </RadzenContentContainer>
    </RadzenBody>

    <RadzenSidebar Expanded="@sidebarExpanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Основное" Icon="home" Path="/"/>
            <RadzenPanelMenuItem Text="Справочник" Icon="save">
                <RadzenPanelMenuItem Text="Единицы измерения" Path="/measure-units" Icon="line_weight" />
                <RadzenPanelMenuItem Text="Типы данных" Path="/data-types" Icon="line_weight" />
                <RadzenPanelMenuItem Text="Типы состояний" Path="/state-types" Icon="line_weight" />
                <RadzenPanelMenuItem Text="Типы комплектующего" Path="/component-types" Icon="line_weight" />
                <RadzenPanelMenuItem Text="Типы оргтехники" Path="/equipment-types" Icon="line_weight" />
                <RadzenPanelMenuItem Text="Типы осмотров" Path="/inspection-types" Icon="line_weight" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Комплектующее" Icon="save">
                <RadzenPanelMenuItem Text="Параметры типа комплектующего" Path="/component-type-properties" Icon="line_weight" />
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenSidebar>

    <RadzenFooter>
        <RadzenLabel Text="Copyright Ⓒ 2022">
        </RadzenLabel>
    </RadzenFooter>

</RadzenLayout>
