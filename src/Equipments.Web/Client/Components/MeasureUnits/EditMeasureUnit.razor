@page "/edit-measure-unit"

@inject HttpClient httpClient

@using Equipments.Web.Client.Models;

<PageTitle>Редактировать единицу измерения</PageTitle>

    <div class="col-md-12">
    <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Невозможно сохранить</RadzenAlert>
    <RadzenTemplateForm TItem="MeasureUnitUpdateViewModel" Data="@model" Visible="@(model != null)" Submit="@FormSubmit">
            <div style="margin-bottom: 1rem" class="row">
                <div class="col-md-3">
                <RadzenLabel Text="Наименование" Component="Name" style="width: 100%" />
                </div>
                <div class="col-md-9">
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@model.Name" Name="Наименование" />
                <RadzenRequiredValidator Component="Наименование" Text="Необходимо наименование!" />
                <RadzenLengthValidator Component="Наименование" Min="2" Max="20" Text="Поле должно содержать от 2 до 20 символов!" />
                <RadzenRegexValidator Component="Наименование" Pattern="^[а-яА-ЯёЁ\s]+$" Text="Только русские символы!" />
                </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
                <div class="col-md-3">
                <RadzenLabel Text="Краткое наименовани" Component="CodeName" style="width: 100%" />
                </div>
                <div class="col-md-9">
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@model.ShortName" Name="Краткое наименование" />
                <RadzenRequiredValidator Component="Краткое наименование" Text="Необходимо краткое наименование наименование!" />
                <RadzenLengthValidator Component="Краткое наименование" Min="2" Max="10" Text="Поле должно содержать от 2 до 10 символов!" />
                <RadzenRegexValidator Component="Краткое наименование" Pattern="^[а-яА-ЯёЁ\s]+$" Text="Только русские символы!" />
                </div>
            </div>
        <div style="margin-bottom: 1rem" class="row">
            <div class="col-md-3">
                <RadzenLabel Text="Тип данных" style="width: 100%" />
            </div>
            <div class="col-md-9">
                <RadzenDropDown Data="@model.DataTypes" TextProperty="Name" ValueProperty="Id"
                                Placeholder="Выберите тип данных" style="display: block; width: 100%"
                                @bind-Value="@model.SelectedDataTypeId"
                                Name="SelectedDataTypeId" Count=@dataTypesCount />
            </div>
        </div>
            <div class="row">
                <div class="col d-flex justify-content-end" style="margin-top: 1rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Сохранить" Style="margin-right: 0.5rem" Variant="Variant.Flat"/>
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Отмена" Variant="Variant.Flat" Click="@CancelButtonClick"  />
                </div>
            </div>
        </RadzenTemplateForm>
    </div>

